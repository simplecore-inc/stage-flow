{
  "name": "@stage-flow/core",
  "version": "0.0.2",
  "type": "module",
  "description": "Framework-agnostic core stage flow engine",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "umd": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    },
    "./error-recovery": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "dev": "rollup -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "sideEffects": false,
  "keywords": [
    "stage-flow",
    "state-machine",
    "react",
    "typescript",
    "animation",
    "plugin-system"
  ],
  "author": "SimpleCORE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simplecore-inc/stage-flow.git"
  },
  "bugs": {
    "url": "https://github.com/simplecore-inc/stage-flow/issues"
  },
  "homepage": "https://simplecore-inc.github.io/stage-flow/",
  "dependencies": {
    "@stage-flow/react": "^0.0.2"
  }
}
